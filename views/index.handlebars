{{#each news}}
<div class="class row">
    <div class="class col-md-3"></div>
    <div class="card mb-3 col-md-6">
        <a href={{link}}><h3 class="card-header">{{title}}</h3></a>
        <div class="card-body">
            <p>
                <span class="card-title">{{author}}</span>  <span style="color:brown">|</span>  
                <span class="card-subtitle text-muted">{{time}}</pan>
            </p>
        </div>
        <img style="height:150px; width:200px; display: block; margin:auto" src={{photoURL}} alt="Card image">
            
        <div class="card-body">
            <p class="card-text">{{summary}}</p>
        </div>        
        {{!-- <div class="card-body">
            <a href="#" class="card-link">Leave a note</a>
        </div> --}}
    </div>
    <div class="class col-md-3"></div>
</div>
{{/each}}